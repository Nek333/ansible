server {
        listen {{ http_port }};
        root /var/www/html;
        index index.php index.html index.htm index.nginx-debian.html;
        server_name {{ http_host }};

        location / {
                try_files $uri $uri/ =404;
        }

        location ~ \.php$ {
                include cd ;
                fastcgi_pass 10.2.0.25:9000;
        }

        location ~ /\.ht {
                deny all;
        }
}
